FROM python:3.8-slim as base

# When building locally, these should be set to your UID/GID.  That way, any
# files written to the $PWD mount will be owned by you.  This is not
# necessary (or wanted) when building in Concourse.
ARG UID=2000
ARG GID=2000
ARG USER=app

RUN grep -q ":$GID:" /etc/group || groupadd --gid=$GID $USER
RUN useradd \
      --home-dir=/home/$USER \
      --no-log-init \
      --create-home \
      --shell=/bin/bash \
      --gid=$GID \
      --uid=$UID \
      --no-user-group \
      --non-unique \
      $USER

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      sqlite3 \
      libsqlite3-dev \
      build-essential \
      libpq-dev \
      git

RUN pip install --upgrade pip
COPY pip-tools/dev-requirements.txt ./pip-tools/
RUN pip install -r pip-tools/dev-requirements.txt

WORKDIR /app
RUN chown "$UID:$GID" .
USER $UID:$GID


ENV PATH=/usr/local/bin:$PATH
ENV FLASK_APP="broker:create_app()"
ENV FLASK_ENV=development
ENV PYTHONDONTWRITEBYTECODE=1
ENV DATABASE_URL="sqlite:////app/dev.sqlite"
ENV SECRET_KEY="test key"
ENV BROKER_USERNAME="broker"
ENV BROKER_PASSWORD="sekrit"

COPY . .

CMD ["bash"]

